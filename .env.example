# Environment Variables for WP Remix App
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=mysql://wordpress:wordpress@localhost:3306/wordpress

# WordPress Configuration
WORDPRESS_DB_HOST=localhost:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress

# Watt Configuration
PORT=3042
NODE_ENV=development

# WordPress Security Keys (generate new ones for production)
# You can generate these using: https://api.wordpress.org/secret-key/1.1/salt/
WORDPRESS_AUTH_KEY=generate-new-key
WORDPRESS_SECURE_AUTH_KEY=generate-new-key
WORDPRESS_LOGGED_IN_KEY=generate-new-key
WORDPRESS_NONCE_KEY=generate-new-key
WORDPRESS_AUTH_SALT=generate-new-salt
WORDPRESS_SECURE_AUTH_SALT=generate-new-salt
WORDPRESS_LOGGED_IN_SALT=generate-new-salt
WORDPRESS_NONCE_SALT=generate-new-salt

# Service URLs (internal communication)
REMIX_APP_URL=http://localhost:3042
WORDPRESS_URL=http://wp.plt.local
COMPOSER_URL=http://composer.plt.local